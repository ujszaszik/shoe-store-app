<resources>

    <!-- APPLICATION THEME -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/appBlue</item>
        <item name="colorPrimaryDark">@color/appBlue</item>
        <item name="colorAccent">@color/appBlue</item>
        <item name="snackbarStyle">@style/MaterialSnackbarTheme</item>
        <item name="snackbarTextViewStyle">@style/MaterialSnackbarTextViewTheme</item>
    </style>

    <!--    ACTION BAR-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--    MATERIAL TEXT VIEW-->
    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/appBlue</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>


    <!--    ERROR SNACKBAR -->
    <style name="MaterialSnackbarTheme" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/white</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="actionTextColorAlpha">1.0</item>
    </style>

    <style name="MaterialSnackbarTextViewTheme" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/red</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">1.0</item>
    </style>

    <!--    MATERIAL FAB-->
    <style name="MaterialFloatingActionButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
